
char
get_answer()
{
    char readbuf[1024];
    char inputchar;

    while(1)
    {
        G_gets(readbuf);
        strncpy(inputchar,readbuf,1);
        if (inputchar == 'Y')
          inputchar = 'y';
        if (inputchar == 'N')
          inputchar = 'n';
        if (inputchar == 'n' || inputchar == 'y')
            break;
        printf("Please enter y or n\n");
    }

    return inputchar;

}
