orig=`pwd`
cd $noise
rm -f TAPE7.DAT BNOISEIN.DAT ; editor.exe
rm -f core TEMP fort.13 fort.15 fort.20 TAPE1.DAT out ; lcdn.exe
rm -f core TAPE2.DAT TAPE8.DAT TAPE3.DAT TAPE4.DAT TAPE55.DAT
rm -f TAPE70.DAT TAPE75.DAT fort.55
cd $orig

t=0
while [ $t = 0 ]
do
    echo ""
    echo "Enter name of file where results will be saved for noise2cell"
    echo "> \c"

    read request
    set - $request
    if [ $1 ]
    then
	touch $1
	if [ -w $1 ]
	then
	    rm $1
	    echo "Results will be saved in <$1>."
	    echo "Is this OK ?"
	    echo "> \c"
	    read request
	    case $request in
		    yes) t=1 ;;
		    y) t=1 ;;
		    YES) t=1 ;;
		    Y) t=1 ;;
		    *) ;;
	    esac
	fi
    fi
done

mv $noise/TAPE1.DAT $1
