# @(#)Makesupp	OEMG v.1.1
# Supplementary Cartographic programs - UNIX V
# For complete generation:
#	make install
# The following must be set in installers environment
# GRAPH		( = /usr/local/bin		<-- installers choice )
#

BIN = $(GRAPH)/bin

# ellipsoid constants program
ellipse: ellipse.o
	cc -o $(BIN)/ellipse ellipse.o -lm

# NAD27 - North American Datum forward/inverse scripts
NAD27:
	get -p s.NAD27 > $(BIN)/for27
	rm -f $(BIN)/inv27
	ln $(BIN)/for27 $(BIN)/inv27
	get -p s.state27 >$(GRAPH)/lib/state27

install:
	make ellipse
	strip $(BIN)/ellipse
	rm -f *.o
	make NAD27

