# @(#)Makesun	OEMG v.1.1
# Sun 3, 4 passive output to screen
#
GRAPH =/usr/mapgen
OPT = -O

CFLAGS = $(OPT) -I$(GRAPH)/src/include

LDFLAGS = -s

LLIB = -lcore -lsuntool -lsunwindow -lpixrect -lm 

sundump: sundump.o
	cc $(LDFLAGS) -o sundump sundump.o $(LLIB)

install:
	make -f Makesun sundump
	make -f Makesun sunview
	mv sundump $(GRAPH)/bin/sundump
	rm sundump.o

sunview:
	cc -c Dsunview.c  -lsuntool -lsunwindow -lpixrect
	ar rv libdev.a Dsunview.o
	ranlib libdev.a
	cc $(LDFLAGS) -o plotter plotter.o devlist.o libdev.a libplt.a -lm -lsuntool -lsunwindow -lpixrect
	mv plotter /usr/mapgen/bin
