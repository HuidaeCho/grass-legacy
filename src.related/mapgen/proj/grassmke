 #!/bin/sh
# ensure shell to be executed by 'make' will be Bourne
LIBARCH=$1
GRASS=$2
GRAPH=$2/mapgen
SHELL=/bin/sh
MSRC=`cd $3/../src.related/mapgen; pwd; cd proj`
INCL=${MSRC}/include
MLIB=${MSRC}/lib/${LIBARCH}
BIN=$GRAPH/bin
GRAPHB=$GRAPH/bin/plotter:$GRAPH/gfonts/:sr:
RANLIB=${RANLIB:-echo}
PATH=$PATH:$BIN
export SHELL GRAPH BIN INCL MLIB GRAPHB RANLIB PATH LIBARCH GRASS

# Make sure mapgen sub-directories exist
for i in mapgen mapgen/bin mapgen/etc mapgen/interface
do
	if test ! -d $2/$i
	then
	mkdir $2/$i || exit 1
	echo $2/$i created
	fi
done

make projs support
