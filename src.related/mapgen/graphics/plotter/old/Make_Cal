INSTALL = /etc/install

#FLIB = -lF77 -lI77
FLIB =

calcomp: calcomp.o
	cc -o $(C_NAME) calcomp.o $(CAL_LIB) $(FLIB)
	strip $(C_NAME)
	$(INSTALL) -f $(GRAPH)/bin -o $(C_NAME)
	rm -f $(C_NAME)

calcomp.o:	extdev.h

