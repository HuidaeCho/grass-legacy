PGM=s.sample

LIBES = $(GISLIB) $(DATETIMELIB)

TUTORIAL = s.sample-tutorial

SOURCE  = \
	bilinear.c \
	cubic.c \
	main.c \
	nearest.c \
	utils.c

LIST  = \
	bilinear.o \
	cubic.o \
	main.o \
	nearest.o \
	utils.o

$(BIN_CONTRIB_CMD)/$(PGM): $(LIST) $(LIBES)
	$(CC) $(LDFLAGS) -o $@ $(LIST) $(LIBES) $(MATHLIB) $(XDRLIB)

tutorial:
	latex $(TUTORIAL).tex
	latex $(TUTORIAL).tex
	dvips $(TUTORIAL).dvi
	compress -f $(TUTORIAL).ps

bilinear.o:     methods.h
cubic.o:        methods.h
main.o:       	methods.h
nearest.o:      methods.h
utils.o:	methods.h
