PGM = sites_to_cell
I = ../Include
EXTRA_CFLAGS  = -I$I
SITELIB = ../lib.a
SITE = $(ETC)/sites

LIST =  main.o\
	ask_quad.o\
	new_screen.o\
	write_cell.o

$(SITE)/$(PGM): $(LIST) $(SITELIB) $(GISLIB)
		$(CC) ${LDFLAGS} -o $(PGM) $(LIST) $(SITELIB) $(GISLIB) $(TERMLIB) $(MATHLIB) $(XDRLIB)
		mv $(PGM) $(SITE)/$(PGM)

$(LIST):	$I/site.h
$(SITELIB):	#
$(GISLIB):	#
