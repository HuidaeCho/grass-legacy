NAME=preview2
LIBS = $(SRC)/paint/Interface/driverlib/lib.a \
	    $(D_LIB) $(DISPLAYLIB) $(RASTERLIB) $(GISLIB) $(LOCKLIB)
EXTRA_CFLAGS = -DPAINT_DRIVERLIB -I../../

PAINT = $(ETC)/paint
LIST =\
    main.o \
    alpha.o \
    close.o \
    data.o \
    erase.o\
    flush.o \
    finish.o \
    init.o \
    npixels.o \
    open.o \
    out.o \
    pictsize.o \
    raster.o \
    rle.o \
    text.o

all: $(PAINT)/driver.sh/$(NAME) $(PAINT)/driver/$(NAME)

$(PAINT)/driver/$(NAME): $(LIST) $(LIBS)
	$(CC) $(LDFLAGS) $(LIST) $(LIBS) $(MATHLIB) $(XDRLIB) -o $@
$(PAINT)/driver.sh/$(NAME): DRIVER.sh
	cp $? $@
	chmod +x $@

data.o: P.h
init.o: P.h
npixels.o: P.h
pictsize.o: P.h
rle.o: P.h


$(LIBS): #
