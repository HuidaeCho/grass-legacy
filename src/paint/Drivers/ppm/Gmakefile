NAME=ppm
LIBS = ../../Interface/driverlib/lib.a $(LOCKLIB)
PAINT = $(ETC)/paint
LIST =\
    main.o \
    alpha.o \
    data.o \
    color.o\
    finish.o \
    init.o \
    npixels.o \
    pictsize.o \
    raster.o \
    rle.o \
    text.o

all: $(PAINT)/driver.uninst/$(NAME) $(PAINT)/driver/$(NAME)

$(PAINT)/driver/$(NAME): $(LIST) $(LIBS)
	$(CC) $(LDFLAGS) $(LIST) $(LIBS) -o $@
$(PAINT)/driver.uninst/$(NAME): DRIVER.sh
	cp $? $@
	chmod +x $@

