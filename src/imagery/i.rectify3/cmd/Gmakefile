####
#### 	i.rectify3 (cmd) 
####

PGM  	= i.rectify3

####    required - suplimental imagery libary
IMAGERY_SUBINC = $(SRC)/libes/image3
IMAGERYLIB_SUP = $(SRC)/libes/image3/libimage_sup.a

####	object files
LIST = main.o\
	check_files.o\
	check_wind.o\
	cp.o\
	compress.o\
	env.o\
	exec.o\
        georef_wind.o\
	mail.o\
	matrix.o\
	parse.o\
	perform.o\
	read_elev.o\
	rectify.o\
	report.o\
	target.o\
	write.o


####	object dependencies
$(LIST): global.h rowcol.h parse.h

LIBES =  $(IMAGERYLIB) $(IMAGERYLIB_SUP) $(D_LIB)\
	 $(DISPLAYLIB) $(RASTERLIB) $(VECTLIB) \
	 $(GPROJLIB) $(LIBTRANS) $(COORCNVLIB) \
	 $(GISLIB) $(VASKLIB)


####	library dependencies
$(LIBES): # in case of lib changes

####	required compile flags
EXTRA_CFLAGS = -I$(IMAGERY_SUBINC)

####	any program required link flags
#EXTRA_LDFLAGS 


####	the rules
$(BIN_CMD)/$(PGM): $(LIST) $(LIBES) 
	$(CC) $(LDFLAGS) -o $@ $(LIST) $(LIBES) $(CURSES) $(MATHLIB) $(XDRLIB)

