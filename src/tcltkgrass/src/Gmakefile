PROG = ../bin/tcltkgrass
PROG2= ../bin/tcltkgrass2

EXTRA_CFLAGS = -I/usr/local/include

TCLTKLIB = -L/usr/local/lib -ltk8.0 -ltcl8.0 -ldl

LIBS  = $(VECTLIB) $(GISLIB)
LLIBS = $(TCLTKLIB) $(XLIBPATH) $(XLIB) $(MATHLIB)

OBJ=\
	georeg.o\
	layer.o\
	view.o\
	draw.o\
	main.o\
	do_labels.o

OBJ2=   main2.o

all: $(PROG) $(PROG2)

$(PROG): $(OBJ) $(LIBS)
	${CC} $(LDFLAGS) -o $@ $(OBJ) $(LIBS) $(LLIBS)

$(PROG2): $(OBJ2) $(GISLIB)
	${CC} $(LDFLAGS) -o $@ $(OBJ2) $(GISLIB) $(LLIBS)

$(LIBS): #
