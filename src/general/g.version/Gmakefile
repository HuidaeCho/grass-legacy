COPYING=`cat ./../../../COPYING`
PGM=g.version

EXTRA_CFLAGS=-DVERSION_NUMBER=\"'$(VERSION_NUMBER)'\" -DVERSION_DATE=\"'$(VERSION_DATE)'\" -DVERSION_UPDATE_PKG=\"'$(VERSION_UPDATE_PKG)'\" -DCOPYING="\"$(COPYING)\""

$(BIN_MAIN_INTER)/$(PGM): main.o
	$(CC) $(EXTRA_CFLAGS) $(LDFLAGS) -o $@ main.o

main.o: $(VERSION_FILE)
