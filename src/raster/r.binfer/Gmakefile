PGM=r.binfer
FILES = gram.c lex.c makefile symtab.h symtab.c table.c main.c \
		flags.c engine.c misc.c reclass.c yywrap.c
OBJS = gram.o lex.o symtab.o table.o main.o \
		flags.o engine.o misc.o reclass.o yywrap.o

all: clean $(BIN_CMD)/$(PGM)

clean:
	-rm -f lex.c gram.c

$(BIN_CMD)/$(PGM): $(OBJS) $(GISLIB)
	$(CC) -o $@ $(LDFLAGS) $(OBJS) $(GISLIB) $(LEXLIB) $(MATHLIB) $(XDRLIB)

count:
	@echo "Current number of lines:"
	@wc -l $(FILES)

$(OBJS): symtab.h
$(GISLIB): #

lex.c: binfer.l
	$(LEX) binfer.l
	rm -f lex.c
	mv lex.yy.c lex.c

gram.c: binfer.y
	$(YACC) binfer.y
	rm -f gram.c
	mv y.tab.c gram.c

