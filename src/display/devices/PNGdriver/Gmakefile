EXTRA_CFLAGS = -I../lib -I. -I/usr/include/gd -I/usr/local/include/gd

PNGLIB = -L/usr/local/lib -lpng -lgd
GDLIB = -L/usr/local/lib -lgd
GRAPH = 

OFILES =  \
	Can_do.o\
	Color.o\
	Draw_line.o\
	Get_w_box.o\
	Get_w_line.o\
	Get_w_pnt.o\
	Graph_Clse.o\
	Graph_Set.o\
	Panel.o\
	Polygn_abs.o\
	Reset_clr.o


$(GISBASE)/driver/PNG: $(OFILES) ${DRIVERLIB} ${GISLIB}
	${CC} $(LDFLAGS) -o $@ $(OFILES) ${DRIVERLIB} ${GISLIB} $(GRAPH) $(ZLIB) ${PNGLIB} ${GDLIB} $(MATHLIB) $(XDRLIB)
	@if egrep '^PNG' $(ETC)/monitorcap >/dev/null 2>&1 ; then \
	echo PNG already defined in $(ETC)/monitorcap ; \
	else \
	echo adding PNG driver to $(ETC)/monitorcap ; \
	cat moncap.entry | sed -e s:BASEDIR:$(GISBASE):g >>$(ETC)/monitorcap ; \
	fi
