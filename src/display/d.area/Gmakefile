PGM       = d.area
LIBES     = $(DISPLAYLIB) $(RASTERLIB) $(VECTLIB) $(GISLIB)


OBJS = \
	main.o \
	plot.o\
	color_parse.o\
        screenpoly.o

CFILES = \
	main.c \
	plot.c \
        screenpoly.c

all: $(BIN_CMD)/$(PGM) $(ETC)/rgb.txt

$(BIN_CMD)/$(PGM): $(OBJS) $(LIBES)
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LIBES) $(MATHLIB) $(XDRLIB)

$(ETC)/rgb.txt: rgb.txt
	cp -f $? $@

$(LIBES): #
