PGM=d.barscale

OFILES = \
	draw_scale.o \
	mouse.o \
	main.o
LIBES=$(DISPLAYLIB) $(RASTERLIB) $(GISLIB)

$(BIN_CMD)/$(PGM): $(OFILES) $(LIBES)
	$(CC) $(LDFLAGS) -o $@ $(OFILES) $(LIBES) $(MATHLIB) $(XDRLIB)

$(RASTERLIB): #
$(DISPLAYLIB): #
$(GISLIB): #

draw_scale.o:	options.h
main.o:		options.h
