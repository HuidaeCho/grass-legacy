PGM=d.scale
OFILES = \
	draw_scale.o \
	screenscale.o \
	main.o

LIBES=$(DISPLAYLIB) $(RASTERLIB) $(GISLIB)

$(BIN_CMD)/$(PGM): $(OFILES) $(LIBES)
	$(CC) $(LDFLAGS) -o $@ $(OFILES) $(LIBES) $(XLIBPATH) $(XLIB) $(XEXTRALIBS) $(MATHLIB) $(XDRLIB)


$(HELP)/d.scale: scale2.help
	cp scale2.help $@


$(RASTERLIB): #
$(DISPLAYLIB): #
$(GISLIB): #

draw_scale.o:	options.h
main.o:	options.h
