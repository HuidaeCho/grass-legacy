#########################################################################
PGM=d.colormode
HOME=$(BIN_MAIN_CMD)
LIST = $(OBJARCH)/main.o
LIBES = $(DISPLAYLIB) $(RASTERLIB) $(GISLIB)

$(HOME)/$(PGM): $(LIST) $(LIBES)
	$(CC) $(LDFLAGS) -o $@ $(LIST) $(LIBES)

$(LIBES): #

$(OBJARCH)/main.o: main.c
	rm -f $@
	$(CC) $(CFLAGS) -c main.c
	mv main.o $@
#########################################################################
# the tags file created by "make ctags" is great for
# editing to look for function definitions
# vi -t <function name>

ctags:
	ctags *.[ch]
	sed 's/\?/\//g' tags > tags.tmp
	mv tags.tmp tags
tags: ctags ; #
