ICONLIB     = $(LIBDIR)/$(LIBARCH)/libicon.a
LOCKLIB     = $(LIBDIR)/$(LIBARCH)/liblock.a
IMAGERYLIB  = $(LIBDIR)/$(LIBARCH)/libI.a
