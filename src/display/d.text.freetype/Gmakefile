PGM=d.text.freetype
CAPFILE=freetypecap
OBJS=main.o
EXTRA_CFLAGS=$(FTINC)

LIBES=$(DISPLAYLIB) $(RASTERLIB) $(GISLIB)
DEPLIBS=$(DEPDISPLAYLIB) $(DEPRASTERLIB) $(DEPGISLIB)

all: $(BIN_CMD)/$(PGM) $(ETC)/$(CAPFILE)

$(BIN_CMD)/$(PGM): $(OBJS) $(DEPLIBS)
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LIBES) $(XDRLIB) $(FTLIB) $(ICONVLIB)

$(ETC)/$(CAPFILE):
	cp $(CAPFILE) $(ETC)/$(CAPFILE)

$(DEPRASTERLIB): #
$(DEPDISPLAYLIB): #
$(DEPGISLIB): #
