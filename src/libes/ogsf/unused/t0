/***********************************************************************/
double
GS_get_aspect()
{
int left, right, bottom, top;

#ifdef TRACE_GS_FUNCS
Gs_status("GS_get_aspect");
#endif

#ifdef SGI_GL
    getviewport (&left, &right, &bottom, &top);
#endif

    return((double)(right-left) / (top-bottom));

}

