HOME=$(BIN_CMD)

INCLUDE = ../include
DBMILIB = $(LIBDIR)/libdbmi.a

LIBES = $(DBMILIB) $(GISLIB) 
EXTRA_CFLAGS=-I$(INCLUDE)

all: 	$(HOME)/db.columns \
	$(HOME)/db.createdb \
	$(HOME)/db.dropdb \
	$(HOME)/db.droptable \
	$(HOME)/db.databases \
	$(HOME)/db.describe \
	$(HOME)/db.drivers \
	$(HOME)/db.execute \
	$(HOME)/db.select \
	$(HOME)/db.tables \
	$(HOME)/db.connect \
	$(ETC)/db.attr

$(HOME)/db.columns: columns.o $(LIBES)
	$(CC) $(LDFLAGS) -o $@ columns.o $(LIBES) $(XDRLIB) $(MATHLIB)

$(HOME)/db.createdb: createdb.o $(LIBES)
	$(CC) $(LDFLAGS) -o $@ createdb.o $(LIBES) $(XDRLIB) $(MATHLIB)

$(HOME)/db.dropdb: dropdb.o $(LIBES)
	$(CC) $(LDFLAGS) -o $@ dropdb.o $(LIBES) $(XDRLIB) $(MATHLIB)

$(HOME)/db.droptable: droptable.o $(LIBES) 
	$(CC) $(LDFLAGS) -o $@ droptable.o $(LIBES) $(XDRLIB) $(MATHLIB)

$(HOME)/db.databases: databases.o $(LIBES)
	$(CC) $(LDFLAGS) -o $@ databases.o $(LIBES) $(XDRLIB) $(MATHLIB)

$(HOME)/db.describe: describe.o printtab.o $(LIBES)
	$(CC) $(LDFLAGS) -o $@ describe.o printtab.o $(LIBES) $(XDRLIB) $(MATHLIB)

$(HOME)/db.drivers: drivers.o $(LIBES)
	$(CC) $(LDFLAGS) -o $@ drivers.o $(LIBES) $(XDRLIB) $(MATHLIB)

$(HOME)/db.execute: execute.o $(LIBES)
	$(CC) $(LDFLAGS) -o $@ execute.o $(LIBES) $(XDRLIB) $(MATHLIB)

$(HOME)/db.select: select.o $(LIBES)
	$(CC) $(LDFLAGS) -o $@ select.o $(LIBES) $(XDRLIB) $(MATHLIB)

$(HOME)/db.tables: tables.o $(LIBES)
	$(CC) $(LDFLAGS) -o $@ tables.o $(LIBES) $(XDRLIB) $(MATHLIB)

$(HOME)/db.connect: connect.o $(LIBES)
	$(CC) $(LDFLAGS) -o $@ connect.o $(LIBES) $(XDRLIB) $(MATHLIB)
	
$(ETC)/db.attr: db.attr
	cp db.attr $(ETC)
	chmod 0755 $(ETC)/db.attr

$(LIBES): #
