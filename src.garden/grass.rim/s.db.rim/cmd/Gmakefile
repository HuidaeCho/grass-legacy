all: $(BIN_MAIN_CMD)/s.db.rim $(ETC)/rim/s.db.rim.cmd

$(ETC)/rim/s.db.rim.cmd: $(OBJFILES)
	-mkdir $(ETC)/rim
	f77 $(LDFLAGS) -o $@ $(FFLAGS) $(OBJFILES) $(MYLIBS) $(GISLIB)

$(BIN_MAIN_CMD)/s.db.rim: highlevel.o
	cc $(LDFLAGS) -o $@ highlevel.o $(GISLIB)

