$(ETC)/rim/v.db.rim.cmd: $(OBJFILES)
	-mkdir $(ETC)/rim
	f77 $(LDFLAGS) -o $@ $(FFLAGS) $(OBJFILES) $(MYLIBS) $(DIG_ATTLIB) $(VECTLIB) $(GISLIB)

$(BIN_MAIN_CMD)/v.db.rim: highlevel.o
	cc $(LDFLAGS) -o $@ highlevel.o $(GISLIB)

