  pack append .green.frame1 \
    .green.frame1.ok { left expand } \
    .green.frame1.cancel { right expand }



  pack append .green \
    .green.frame0 { top expand fill } \
    .green.frame1 { bottom expand fill }



  grab set .green
  tkwait window .green

}




