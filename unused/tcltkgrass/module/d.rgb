             }


  pack append .green.frame0 \
    .green.frame0.label { top fillx } \
    .green.frame0.button { right frame n } \
    .green.frame0.entry { top fill } \
    .green.frame0.hscrollbar { top fillx }



  bind .green.frame0.entry <Return> {
       set gname [%W get] }


  frame .green.frame1 \
     -borderwidth {2}

  button .green.frame1.ok \
     -text Ok \
     -relief raised \
     -padx 10 \
     -command {
                  set gname [.green.frame0.entry get]
                 destroy .green }

  button .green.frame1.cancel \
     -text Cancel \
     -relief raised \
     -padx 10 \
     -command {
                  set gname ""
