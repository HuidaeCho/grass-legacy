INCLUDES = ../include
OFILES = main.o bound.o io.o
DIGINC = $(SRC)/mapdev/lib
EXTRA_CFLAGS = -I$(INCLUDES) -I$(DIGINC)

all:	$(BIN)/Gpoly2 $(MAN2)/Gpoly2
prog:	$(BIN)/Gpoly2

$(BIN)/Gpoly2:	$(OFILES)
	rm -f $@
	$(CC) $(LDFLAGS) $(OFILES) $(DIGLIB) $(GISLIB) -o $@

$(OFILES):	$(INCLUDES)/digit.h $(INCLUDES)/extr_areas.h

$(MAN2)/Gpoly2: Gpoly2.man
	$(MANROFF)

$(HELP)/Gpoly2: Gpoly2.help
	cp Gpoly2.help $@
