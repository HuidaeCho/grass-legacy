HOME=$(BIN)
DBASEDIR=$(ETC)/gdbase
SCRIPTS= r.gdbase s.gdbase s.reclass v.gdbase

all:
	cd $(HOME) ; rm -f $(SCRIPTS)
	cd modules; cp $(SCRIPTS) $(HOME); cd ..
	cd $(HOME) ; chmod +rx $(SCRIPTS)
	rm -rf $(DBASEDIR)
	mkdir $(DBASEDIR)
	cd scripts; tar cvf - . | (cd $(DBASEDIR) ; tar xvf -)
	cd $(DBASEDIR) ; chmod +rx gdb.*
