HOME=$(BIN)
DBASEDIR=$(ETC)/gdbase
SCRIPTS= r.gdbase s.gdbase v.gdbase

all:
	echo $(UNIX_SYS)
	(cd $(HOME) ; rm -f $(SCRIPTS);)
	cd modules; cp $(SCRIPTS) $(HOME); cd .. ;
	(cd $(HOME) ; chmod +rx $(SCRIPTS);)
	rm -rf $(DBASEDIR) ;
	mkdir $(DBASEDIR) ;
	cd scripts; tar cf - . | (cd $(DBASEDIR) ; tar xf -) ;
	cd $(DBASEDIR) ; chmod +rx gdb.* ;
