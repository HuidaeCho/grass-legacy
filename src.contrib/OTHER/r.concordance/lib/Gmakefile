prefix=/usr/local/staff/villa/Work/Dev/r.concordance
CC_FLAGS=-g -fno-builtin -fpcc-struct-return -fwritable-strings
INCLUDE_PATHS=-I.  -I/usr/local/include 
LIBDIR=$(prefix)/lib
LINK_PATHS=-L$(LIBDIR)

SRC_LIST= checks.C strings.C \
	  array.C object.C scanner.C  \
	  assoc.C utility.C MCA.C matrix.C

OBJ_LIST= checks.o strings.o \
	  array.o object.o scanner.o \
	  assoc.o utility.o MCA.o matrix.o


.C.o:
	g++ -c $(CC_FLAGS) $(INCLUDE_PATHS) -o $@ $<

.c.o:
	gcc -c $(CC_FLAGS) $(INCLUDE_PATHS) -o $@ $<

all: $(LIBDIR)/libbase.a

clean: 
	rm -f *.o *.a core *\~ *.bak 

$(LIBDIR)/libbase.a: $(OBJ_LIST)
	rm  -f $(LIBDIR)/libbase.a
	ar cqv $(LIBDIR)/libbase.a $(OBJ_LIST)
	ranlib $(LIBDIR)/libbase.a
# DO NOT DELETE THIS LINE -- make depend depends on it.

array.o: /usr/include/ctype.h /usr/include/stdlib.h
array.o: /usr/include/sys/stdtypes.h array.H object.H classes.H stdtypes.H
array.o: checks.H strings.H /usr/include/string.h
assoc.o: assoc.H array.H object.H classes.H stdtypes.H checks.H strings.H
assoc.o: /usr/include/string.h /usr/include/sys/stdtypes.h
checks.o: /usr/include/stdio.h /usr/include/stdlib.h
checks.o: /usr/include/sys/stdtypes.h stdtypes.H checks.H
object.o: object.H classes.H stdtypes.H checks.H
strings.o: /usr/include/ctype.h /usr/include/stdio.h /usr/include/stdlib.h
strings.o: /usr/include/sys/stdtypes.h strings.H /usr/include/string.h
strings.o: /usr/include/sys/types.h /usr/include/sys/sysmacros.h
strings.o: /usr/include/sys/stat.h /usr/include/unistd.h utility.H stdtypes.H
utility.o: /usr/include/ctype.h /usr/include/stdio.h /usr/include/stdlib.h
utility.o: /usr/include/sys/stdtypes.h strings.H /usr/include/string.h
utility.o: utility.H stdtypes.H /usr/include/unistd.h
scanner.o: assoc.H scanner.H
matrix.o:  matrix.H object.H
MCA.o:     MCA.H matrix.H strings.H array.H assoc.H
