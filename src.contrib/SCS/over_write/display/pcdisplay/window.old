/* modified: R. Glenn, SCS
 *           Windowing was not working, zoom in/out would NOT show
 *           new window configuration, small upper right window
 *           would NOT show fullsize map.
 */
#include "gis.h"
#include "windows.h"
#include "variables.h"
#include "popup.h"

window()
{
	struct Cell_head wind ;
	struct Cell_head tmp_wind ;  /* added:  RLG 12/17/88 */
	int i ;
	int background_color ;
	int text_color ;
	int div_color ;
	static char *options[] = {
		"@WINDOW ZOOM",
		"@zoom in",
		"@zoom out",
		"@type coordinates",
		"@RETURN",
		NULL } ;

	background_color = D_translate_color(BC_WIND) ;
	text_color       = D_translate_color(TC_WIND) ;
	div_color        = D_translate_color(DC_WIND) ;

	R_open_driver();
	i = D_popup(
		background_color,
		text_color,
		div_color,
		TOP,
		LEFT,
		SIZE,
		options
		) ;
	R_close_driver();

	switch(i)
	{
	case 1:
		R_open_driver();
		Dchoose(MAP.name) ;
		R_close_driver();
		G_clear_screen() ;
		printf("\n\n   Please identify new window on main map\n") ;
	/* d.window exits with 0 if the window is changed */
		if (gorun("d.window", ""))
			return ;
		break ;
	case 2:
		R_open_driver();
		Dchoose(REF.name) ;
		R_close_driver();
/* -------------------------------------------------------------- */       
        /* Save current window values */
	        G_copy (&tmp_wind, &wind, sizeof(wind)) ;
        /* Now get default window */
	        G__get_window (&wind,"","DEFAULT_WIND",G_mapset()) ;
        /* Make this the current window */
 	        G_put_window(&wind);
/* --------------------------------------- RLG, SCS, 12/17/88 --- */       
		G_clear_screen() ;
		printf("\n\n   Please identify new window on\n") ;
		printf("   small reference map at upper right\n") ;
	/* d.window exits with 0 if the window is changed */
		if (gorun("d.window", ""))
			return ;
		break ;
	case 3:
		gorun("window", "") ;
		break ;
	default:
		return ;
		break ;
	}


	show_window() ;

	R_open_driver();

/* Draw cell map */
	/* G__get_window called here because we need to read the current window
	 * which may have changed.  G_get_window reads the window only once.
	 */
	G__get_window (&wind,"","WIND",G_mapset()) ; 
        G_set_window(&wind) ;
fprintf(stderr,"display/window: WIND\n");
fprintf(stderr,"N %12.3f, S %12.3f, E %12.3f, W %12.3f\n",wind.north,wind.south,
wind.east,wind.west);

	Dchoose(MAP.name) ;
	Derase(D_translate_color("black")) ;
	if (mapset && maptyp == 1)
	    Dcell(mapname, mapset, 0) ;
/*	if (maptyp == 2)
	    gorun("Dvect", command) ; */

/* Draw tiny map */
/* First save values of current window, then get default window */
	G_copy (&tmp_wind, &wind, sizeof(wind)) ;
  	G_get_default_window(&wind) ; 
/* Make this the current window */
fprintf(stderr,"display/window: DEFAULT\n");
fprintf(stderr,"N %12.3f, S %12.3f, E %12.3f, W %12.3f\n",wind.north,wind.south,
wind.east,wind.west);
	G_put_window(&wind);

	Dchoose(REF.name) ;
	Derase(D_translate_color("black")) ;
	if (mapset && maptyp == 1)
	    Dcell(mapname, mapset, 0) ;
/*	if (maptyp == 2)
	    gorun("Dvect", command) ; */

	R_close_driver();
/*  Now reset to original current window */
	G_copy (&wind, &tmp_wind, sizeof(tmp_wind)) ;
	G_put_window(&wind);

/* Draw outline of current window on tiny map */
	Draw_outline() ;
}
