#	use -DRAM_OFF if you do not want the digit file loaded into memory
#	for optimization,   this is also toggle-able from the command line if -DRAM_ON is used
EXTRA_CFLAGS	=$(CAN_CLEAR) $(VECT_INCLUDE) -DRAM_ON

BUILD_LIB = $(SRC)/mapdev/v.build/libbuild.a

OBJ = \
	area.o \
	isle.o\
	labels.o \
	read_digit.o

CFILES = \
	area.c \
	isle.c\
	labels.c \
	read_digit.c

PROG = $(ETC)/v.build 

all:    $(BUILD_LIB) $(PROG)

$(BUILD_LIB): $(OBJ)
	$(AR)

$(PROG): main.o $(BUILD_LIB) $(VECTLIB)
	rm -f a.out $@
	$(CC) $(LDFLAGS) main.o $(BUILD_LIB) $(VECTLIB) $(VECTLIB)  $(GISLIB) $(DIG_ATTLIB) $(MATHLIB)
	mv a.out $@

