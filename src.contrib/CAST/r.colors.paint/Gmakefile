PGM = r.colors.paint

LIST = main.o readfile.o range.o assign_color.o

INTERFACE = $(SRC)/paint/Interface/applib/lib.a

$(BIN_CONTRIB_CMD)/$(PGM): $(LIST) $(GISLIB) $(DISPLAYLIB) $(RASTERLIB) $(INTERFACE)
	$(CC) $(LDFLAGS) $(LIST) $(GISLIB) $(DISPLAYLIB) $(INTERFACE) -o $@ $(MATHLIB) $(XDRLIB)
	rm -rf $(ETC)/Gcolortab
	mkdir $(ETC)/Gcolortab
	mkdir $(ETC)/Gcolortab/tek4695
	mkdir $(ETC)/Gcolortab/shinko635
	mkdir $(ETC)/Gcolortab/preview
#	cp Gcolortab/tek4695/* $(ETC)/Gcolortab/tek4695
	(cd Gcolortab/tek4695/ ; tar -cvf - * | (cd $(ETC)/Gcolortab/tek4695/; tar -xvf - 2>/dev/null ); true )
#	cp Gcolortab/shinko635/* $(ETC)/Gcolortab/shinko635
	(cd Gcolortab/shinko635/ ; tar -cvf - * | (cd $(ETC)/Gcolortab/shinko635/; tar -xvf - 2>/dev/null ); true )
#	cp Gcolortab/preview/* $(ETC)/Gcolortab/preview
	(cd Gcolortab/preview/ ; tar -cvf - * | (cd $(ETC)/Gcolortab/preview/; tar -xvf - 2>/dev/null ); true )

$(GISLIB): #
$(VASKLIB): #
$(DISPLAYLIB): #
$(RASTERLIB): #
