ARCH                = sgi

GISBASE             = /usr/grass4
UNIX_BIN            = /usr/local/bin

DEFAULT_DATABASE    = /usr/grass4/data
DEFAULT_LOCATION    = spearfish

COMPILE_FLAGS       = -O
LDFLAGS             = -s -lc_s

TERMLIB             = -ltermlib
CURSES              = -lcurses $(TERMLIB)
MATHLIB             = -lm
LIBRULE             = ar rc $@ `lorder $(OBJ) | tsort`

USE_TERMIO          = -DUSE_TERMIO
USE_MTIO            = -DUSE_MTIO
DIGITFLAGS          = -DUSE_SETREUID -DUSE_SETEUID  -DSYSV
CAN_CLEAR           = -DCAN_CLEAR
